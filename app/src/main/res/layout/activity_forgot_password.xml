<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_password">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_an_a"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="2sp"
            android:text="@string/forgot_pass"
            android:textAppearance="@style/create_an_a"
            android:translationY="-0.94sp" />

        <TextView
            android:id="@+id/complete_th"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="start|top"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="8dp"
            android:text="@string/enter_your_"
            android:textAppearance="@style/complete_th" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="294dp"
        android:layout_height="69dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:id="@+id/lable_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="@string/email_label"
            android:textAppearance="@style/lablename" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:text="@string/email_text"
            android:textAppearance="@style/text" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="301dp"
        android:layout_height="84dp"

        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4">


        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/already_hav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0sp"
                android:paddingStart="22dp"
                android:text="@string/remember_pass_back"
                android:textAppearance="@style/already_hav" />


            <TextView
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0sp"
                android:paddingStart="4dp"
                android:text="@string/sign_in"
                android:textAppearance="@style/sign_in" />
        </LinearLayout>

        <Button
            android:id="@+id/button_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup"
            android:text="@string/send_otp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>