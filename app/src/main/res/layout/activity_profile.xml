<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

  <TextView
      android:id="@+id/text_view"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="#f1f1f1"
      android:text="@string/profile"
      android:textAppearance="@style/profile"
      android:gravity="center_horizontal|bottom"
      android:layout_alignParentTop="true"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:layout_below="@+id/text_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp">

      <ImageButton
          android:id="@+id/imageButton"
          android:layout_width="117dp"
          android:layout_height="117dp"
          android:background="@drawable/circular_button_background"
          android:clipToOutline="true"
          android:scaleType="center"
          app:srcCompat="@drawable/man" />

      <RelativeLayout
          android:id="@+id/nestedRelativeLayout"
          android:layout_width="263dp"
          android:layout_height="63dp"
          android:layout_alignParentRight="true"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="23dp"
          android:layout_toRightOf="@id/imageButton">


        <TextView
            android:id="@+id/hello_ken"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="11sp"
            android:layout_marginTop="22dp"
            android:text="@string/hello_ken"
            android:textAppearance="@style/hello_ken"
            android:translationY="-5.62sp" />

        <TextView
            android:id="@+id/current_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="2sp"
            android:text="@string/current_bal"
            android:textAppearance="@style/current_bal"
            android:translationY="-0.97sp" />

        <TextView
            android:id="@+id/n10_712_00"
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:text="@string/balance"
            android:textAppearance="@style/balance"
            android:lineSpacingExtra="2sp"
            android:translationY="-0.97sp"
            android:gravity="top"
            android:layout_toRightOf="@id/current_bal"
            android:layout_alignBaseline="@id/current_bal"
            android:paddingStart="4dp"
            />
      </RelativeLayout>



    </RelativeLayout>
  </RelativeLayout>

</RelativeLayout>