<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

  <TextView
      android:id="@+id/text_view"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      android:layout_alignParentTop="true"
      android:background="#f1f1f1"
      android:gravity="center_horizontal|bottom"
      android:text="@string/profile"
      android:textAppearance="@style/profile"
      android:textColor="#546E7A" />

  <RelativeLayout
      android:id="@+id/centre_layout"
      android:layout_width="match_parent"
      android:layout_height="586dp"
      android:layout_below="@+id/text_view">

    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginHorizontal="22dp">

      <ImageButton
          android:id="@+id/imageButton"
          android:layout_width="117dp"
          android:layout_height="117dp"
          android:background="@drawable/circular_button_background"
          android:clipToOutline="true"
          android:contentDescription="@string/already_hav"
          android:scaleType="center"
          app:srcCompat="@drawable/man" />

      <RelativeLayout
          android:id="@+id/nestedRelativeLayout"
          android:layout_width="263dp"
          android:layout_height="63dp"
          android:layout_alignParentRight="true"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="23dp"
          android:layout_toRightOf="@id/imageButton">


        <TextView
            android:id="@+id/hello_ken"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="11sp"
            android:text="@string/hello_ken"
            android:textAppearance="@style/hello_ken"
            android:translationY="-5.62sp" />

        <TextView
            android:id="@+id/current_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="2sp"
            android:text="@string/current_bal"
            android:textAppearance="@style/current_bal"
            android:translationY="-0.97sp" />

        <TextView
            android:id="@+id/n10_712_00"
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:layout_alignBaseline="@id/current_bal"
            android:layout_toRightOf="@id/current_bal"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:paddingStart="4dp"
            android:text="@string/balance"
            android:textAppearance="@style/balance"
            android:translationY="-0.97sp" />
      </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_layout"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="20dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/enable_dark"
          android:textAppearance="@style/enable_dark" />

      <Switch
          android:id="@+id/switch1"
          android:layout_width="wrap_content"
          android:layout_height="33dp"
          android:layout_gravity="end|top"
          android:gravity="top" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_layout"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="35dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/profile_circle" />

        <FrameLayout
            android:layout_width="285dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imageView5">

          <TextView
              android:id="@+id/edit_profil"
              android:layout_width="79dp"
              android:layout_height="wrap_content"
              android:gravity="top"
              android:lineSpacingExtra="-3sp"
              android:text="@string/edit_profil"
              android:textAppearance="@style/edit_profil" />


          <TextView
              android:id="@+id/name_phone_"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:lineSpacingExtra="2sp"
              android:text="@string/name_phone_"
              android:textAppearance="@style/name_phone_"
              android:translationY="-0.97sp" />
        </FrameLayout>

          <ImageView
              android:id="@+id/imageView6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="6dp"
              app:srcCompat="@drawable/frame_106" />
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="44dp">
      </RelativeLayout>
    </LinearLayout>


  </RelativeLayout>
  <LinearLayout
      android:id="@+id/nav_bar"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:background="#f1f1f1"
      android:layout_below="@+id/centre_layout">


      <ImageButton
          android:id="@+id/button_home"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:backgroundTint="@color/transparent_color"
          app:srcCompat="@drawable/home_unmain"
          android:paddingStart="22dp"/>


    <ImageButton
        android:id="@+id/button_wallet"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="22dp"
        android:backgroundTint="@color/transparent_color"
        app:srcCompat="@drawable/wallet" />

    <ImageButton
        android:id="@+id/button_track"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/transparent_color"
        app:srcCompat="@drawable/track" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp">

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/rectangle"
          android:paddingStart="8dp"
          />

      <ImageButton
          android:id="@+id/button_profile"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:backgroundTint="@color/transparent_color"
          app:srcCompat="@drawable/profile_main" />

    </RelativeLayout>
  </LinearLayout>

</RelativeLayout>