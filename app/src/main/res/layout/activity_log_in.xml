<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="276dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_an_a"
            android:layout_width="196dp"
            android:layout_height="30dp"
            android:gravity="start|top"
            android:lineSpacingExtra="2sp"
            android:text="@string/welcome_bac"
            android:textAppearance="@style/create_an_a"
            android:translationY="-0.94sp" />


        <TextView
            android:id="@+id/complete_th"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="@string/fill_in_you"
            android:textAppearance="@style/complete_th" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="324dp"
        android:layout_height="158dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <FrameLayout
            android:layout_width="294dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/lable_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="0sp"
                android:text="@string/email_label"
                android:textAppearance="@style/lablename" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:text="@string/email_text"
                android:textAppearance="@style/text" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="294dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/lable_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="0sp"
                android:text="@string/pass_label"
                android:textAppearance="@style/lablename" />

            <TextView
                android:id="@+id/text_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:text="@string/pass_text"
                android:textAppearance="@style/text"
                app:drawableEndCompat="@drawable/ic_pass_show" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="312dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <Button
            android:id="@+id/button_sing_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup"
            android:text="@string/sign_in" />

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/already_hav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0sp"
                android:paddingStart="44dp"
                android:text="@string/already_hav"
                android:textAppearance="@style/already_hav" />

            <TextView
                android:id="@+id/sign_un"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0sp"
                android:paddingStart="6dp"
                android:text="@string/sign_up"
                android:textAppearance="@style/sign_in" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

        <TextView
            android:id="@+id/or_sign_in_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="@string/or_sign_in_"
            android:textAppearance="@style/or_sign_in_" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            app:srcCompat="@drawable/google" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="top" />

            <TextView
                android:id="@+id/remember_pa"
                android:layout_width="156dp"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:lineSpacingExtra="2sp"
                android:paddingEnd="22dp"
                android:text="@string/remember_pa"
                android:textAppearance="@style/remember_pa"
                android:translationY="-0.97sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="111dp"
            android:layout_height="25dp"
            android:gravity="end|bottom"
            android:lineSpacingExtra="2sp"
            android:text="@string/forgot_pass_"
            android:textAppearance="@style/forgot_pass"
            android:translationY="-0.97sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>