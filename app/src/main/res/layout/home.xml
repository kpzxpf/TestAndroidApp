<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/frame_43"
        android:layout_width="341dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:background="@drawable/frame_43">
        <TextView
            android:id="@+id/search_serv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_serv"
            android:textAppearance="@style/search_serv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="2sp"
            android:translationY="-0.97sp"
            android:gravity="center_horizontal|top"
            />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
             android:layout_marginEnd="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/frame_43"
        android:background="@drawable/profileinfo">


        <View
            android:id="@+id/ellipse_1"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="-94dp"
            android:background="@drawable/circle_background" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-50dp"
            android:layout_marginBottom="-94dp"
            android:background="@drawable/circle_background" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="78dp"
            android:layout_height="63dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/circular_button_background"
            android:clipToOutline="true"
            android:contentDescription="@string/already_hav"
            android:scaleType="center"
            app:srcCompat="@drawable/man" />

        <RelativeLayout
            android:id="@+id/nestedRelativeLayout"
            android:layout_width="163dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="113dp"
            android:layout_toRightOf="@id/imageButton">


            <TextView
                android:id="@+id/hello_ken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:lineSpacingExtra="11sp"
                android:text="@string/hello_ken_"
                android:textAppearance="@style/hello_ken_"
                android:translationY="-5.62sp" />


            <TextView
                android:id="@+id/we_trust_yo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="2sp"
                android:text="@string/we_trust_yo"
                android:textAppearance="@style/we_trust_yo"
                android:translationY="-0.97sp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/notification7"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/transparent_color"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/upper_layout"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/special_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_for"
            android:textAppearance="@style/special_for"
            android:lineSpacingExtra="0sp"
            android:layout_centerVertical="true"
            android:gravity="top"
            />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ight"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/frame_50" />

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/frame_51" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/frame_51" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/frame_50" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/what_would_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_would_"
        android:textAppearance="@style/what_would_"
        android:lineSpacingExtra="0sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scroll"
        android:gravity="top"
        />

    <RelativeLayout
        android:id="@+id/customer_ca"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_below="@+id/what_would_"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/customer_ca"
        android:clipToOutline="true"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/imageView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/healthicons_call_centre" />

        <TextView
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView40"
            android:layout_marginStart="6dp"
            android:gravity="top"
            android:lineSpacingExtra="-3sp"
            android:text="@string/customer_ca"
            android:textAppearance="@style/customer_ca" />

        <TextView
            android:id="@+id/our_custome"
            android:layout_width="141dp"
            android:layout_height="51dp"
            android:layout_below="@+id/customer"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="@string/our_custome"
            android:textAppearance="@style/our_custome"
            android:translationY="-0.6sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customer_ca2"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:clipToOutline="true"
        android:background="@drawable/customer_ca"
        android:elevation="5dp"
        android:layout_below="@+id/what_would_"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/codicon_package" />

        <TextView
            android:id="@+id/send_a_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView41"
            android:layout_marginStart="6dp"
            android:gravity="top"
            android:lineSpacingExtra="-3sp"
            android:text="@string/send_a_pack"
            android:textAppearance="@style/send_a_pack" />

        <TextView
            android:id="@+id/request_for"
            android:layout_width="141dp"
            android:layout_height="51dp"
            android:layout_below="@+id/send_a_pack"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="@string/request_for"
            android:textAppearance="@style/request_for"
            android:translationY="-0.6sp" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/customer_ca3"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:clipToOutline="true"
        android:background="@drawable/customer_ca"
        android:elevation="5dp"
        android:layout_below="@+id/customer_ca"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/sdz" />

        <TextView
            android:id="@+id/fund_your_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView42"
            android:layout_marginStart="6dp"
            android:gravity="top"
            android:lineSpacingExtra="-3sp"
            android:text="@string/fund_your_w"
            android:textAppearance="@style/fund_your_w" />

        <TextView
            android:id="@+id/to_fund_you"
            android:layout_width="141dp"
            android:layout_height="51dp"
            android:layout_below="@+id/fund_your_w"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="@string/to_fund_you"
            android:textAppearance="@style/to_fund_you"
            android:translationY="-0.6sp" />
    </RelativeLayout>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/customer_ca4"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:clipToOutline="true"
        android:background="@drawable/customer_ca"
        android:elevation="5dp"
        android:layout_below="@+id/customer_ca"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/vector" />

        <TextView
            android:id="@+id/chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView44"
            android:layout_marginStart="6dp"
            android:gravity="top"
            android:lineSpacingExtra="-3sp"
            android:text="@string/chats"
            android:textAppearance="@style/chats" />


        <TextView
            android:id="@+id/search_for_"
            android:layout_width="141dp"
            android:layout_height="51dp"
            android:layout_below="@+id/chats"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="@string/search_for_"
            android:textAppearance="@style/search_for_"
            android:translationY="-0.6sp" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f1f1f1">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingStart="22dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rectangle"
                android:paddingStart="18dp"
                />

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/transparent_color"
                app:srcCompat="@drawable/home" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/button_wallet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="22dp"
            android:backgroundTint="@color/transparent_color"
            app:srcCompat="@drawable/wallet" />

        <ImageButton
            android:id="@+id/button_track"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent_color"
            app:srcCompat="@drawable/track" />

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent_color"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>
</RelativeLayout>